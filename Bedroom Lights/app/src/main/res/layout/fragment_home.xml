<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/mainFrameId"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.example.jesse.bedroomlight.fragments.HomeFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/background"
        android:orientation="vertical">

        <TextView
            android:text="Main View"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="52sp"
            android:id="@+id/textView2"
            android:textAppearance="@style/TextAppearance.AppCompat.Large.Inverse"
            android:textAlignment="center"
            android:textStyle="normal|bold"
            android:textSize="32sp" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/bedSideLampView"
            android:text="Bedside Lamp"
            android:layout_marginTop="150dp"
            android:layout_marginLeft="10dp"
            android:textColor="#ffffff"
            android:textSize="18sp" />
        <ImageView
            android:layout_width="70dp"
            android:layout_height="70dp"
            app:srcCompat="@mipmap/ic_launcher"
            android:layout_marginTop="120dp"
            android:id="@+id/imageView4"
            android:scaleType="fitXY"
            android:layout_marginStart="135dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true" />

        <ToggleButton
            android:text="ToggleButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/bedsideLightToggle"
            android:textOff="Light Off"
            android:textOn="Light On"
            android:layout_marginStart="20dp"
            android:layout_alignBottom="@+id/imageView4"
            android:layout_toEndOf="@+id/imageView4"
            android:layout_marginBottom="10dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/mainLightView"
            android:text="Main Lamp"
            android:layout_marginTop="280dp"
            android:layout_marginLeft="30dp"
            android:textColor="#ffffff"
            android:textSize="18sp" />

        <ImageView
            android:layout_width="70dp"
            android:layout_height="70dp"
            app:srcCompat="@mipmap/ic_launcher"
            android:layout_marginTop="250dp"
            android:id="@+id/imageView5"
            android:scaleType="fitXY"
            android:layout_marginStart="135dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true" />

        <ToggleButton
            android:text="ToggleButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/mainLightToggle"
            android:textOff="Light Off"
            android:textOn="Light On"
            android:layout_marginStart="20dp"
            android:layout_alignBottom="@+id/imageView5"
            android:layout_toEndOf="@+id/imageView5"
            android:layout_marginBottom="10dp" />


    </RelativeLayout>

</FrameLayout>
